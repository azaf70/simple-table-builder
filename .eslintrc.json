{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true,
        "vue/setup-compiler-macros": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/vue3-essential",
        "plugin:vue/vue3-recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["vue"],
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "vue/html-indent": ["error", 4],
        "object-curly-spacing": ["error", "always"],
        "keyword-spacing": ["error"],
        "key-spacing": [
            "error",
            {
                "afterColon": true
            }
        ],
        "space-infix-ops": [
            "error",
            {
                "int32Hint": false
            }
        ],
        "vue/component-tags-order": ["error", {
            "order": ["template", "script", "style"]
        }]
    }
}
